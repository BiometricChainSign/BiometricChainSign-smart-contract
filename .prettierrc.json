{
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "printWidth": 100,
                "tabWidth": 2,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": false
            }
        },
        {
            "files": "*.yml",
            "options": {}
        },
        {
            "files": "*.yaml",
            "options": {}
        },
        {
            "files": "*.toml",
            "options": {}
        },
        {
            "files": "*.json",
            "options": {}
        },
        {
            "files": "*.js",
            "options": {
                "printWidth": 100,
                "tabWidth": 2,
                "singleQuote": true,
                "semi": false
            }
        },
        {
            "files": "*.ts",
            "options": {
                "printWidth": 100,
                "tabWidth": 2,
                "singleQuote": true,
                "semi": false
            }
        }
    ]
}
